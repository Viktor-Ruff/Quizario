<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_back_main"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xlarge_size_indent_32dp"
        android:fontFamily="@font/florabet"
        android:shadowColor="@color/black_95"
        android:shadowDx="10"
        android:shadowRadius="10"
        android:text="Quizario"
        android:textColor="@color/black"
        android:textSize="76sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_start"
        style="@style/my_button_style.large"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/middle_size_indent_16dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/start"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>