<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="levels_tv_style">
        <item name="android:fontFamily">@font/didact_gothic_regular</item>
        <item name="android:background">@drawable/selector_game_level</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_size_font_32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="levels_tv_style.small">
        <item name="android:textSize">@dimen/small_size_font_20sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="levels_tv_style.large">
        <item name="android:textSize">@dimen/xlarge_size_font_40sp</item>
        <item name="android:background">@drawable/selector_game_level_large</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="levels_tv_style.xlarge">
        <item name="android:background">@drawable/selector_game_level_xlarge</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="my_tv_style">
        <item name="android:fontFamily">@font/didact_gothic_regular</item>
        <item name="android:textSize">@dimen/large_size_font_32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/middle_size_indent_16dp</item>
        <item name="android:textColor">@color/black_95</item>
    </style>

    <style name="my_tv_style.small">
        <item name="android:textSize">@dimen/middle_size_font_24sp</item>
    </style>

    <style name="my_tv_style.large">
        <item name="android:textSize">@dimen/xlarge_size_font_40sp</item>
    </style>

    <style name="my_tv_style.xlarge">
        <item name="android:textSize">56sp</item>
    </style>

    <style name="card_tv_style">
        <item name="android:shadowColor">@color/black_95</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:inputType">number</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/tv_style_white_40</item>
        <item name="android:fontFamily">@font/koblenz_shadow</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">116sp</item>
    </style>

    <style name="card_tv_style.small">
        <item name="android:textSize">86sp</item>
    </style>

    <style name="card_tv_style.large">
        <item name="android:textSize">160sp</item>
    </style>

    <style name="card_tv_style.xlarge">
        <item name="android:textSize">200sp</item>
    </style>

    <style name="my_button_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white_40</item>
        <item name="android:fontFamily">@font/didact_gothic_regular</item>
        <item name="android:textColor">@color/black_95</item>
        <item name="android:textSize">@dimen/middle_size_font_24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/black_60</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="my_button_style.large">
        <item name="cornerRadius">24dp</item>
        <item name="android:textSize">@dimen/large_size_font_32sp</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="my_button_style.xlarge">
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">@dimen/xlarge_size_font_40sp</item>
        <item name="strokeWidth">4dp</item>
    </style>

    <style name="my_button_style.small">
        <item name="android:textSize">@dimen/small_size_font_20sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">1dp</item>
    </style>


</resources>